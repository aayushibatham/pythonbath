clc
clear all
% unipolar NRZ plot
n = input('Enter the input bit:');

for ii = 1:length(n)
    if n(ii) == 1
        nn(ii) = 3;
    else nn(ii) = 0;
    end
end

i = 1;
t = 0:0.01:length(n);

for j = 1:length(t)
    if t(j) <= i
        y(j) = nn(i);
    else y(j) = nn(i);
        i = i+1;
    end
end
plot(t,y,'-r')
axis([0 length(n) -10 10])
% BPSK
c = cos(2*pi*2*t);
x = y.*c;
figure(1)
plot(t,y,'r-')
axis([0 length(n) -5 5])
figure(2)
plot(t,x)
